#include <Wire.h>
#define SLAVE 4


void setup() {    
  Serial.begin(9600); // 직렬 통신 초기화
  Wire.begin(SLAVE);  
  Wire.onReceive(receiveEvent);    
}

void loop () {
  
  
}

void receiveEvent(int sizeData){    
  char read_data[12] = {0,};
  
  if(Wire.available() > 0){
    for(int i = 0; i<sizeData; i++) {read_data[i] = Wire.read();}
    Serial.println(read_data);    
  }
}

